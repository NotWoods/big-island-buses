{
    "name": "big-island-buses",
    "version": "3.0.0",
    "description": "A far easier to use unofficial schedule for the Hawaii Hele-On Bus.",
    "private": true,
    "dependencies": {},
    "devDependencies": {
        "@11ty/eleventy": "^0.10.0",
        "@types/google.analytics": "0.0.40",
        "@types/googlemaps": "^3.37.0",
        "@types/jszip": "^3.1.6",
        "jszip": "^3.2.2",
        "prettier": "^1.19.1",
        "rollup": "^1.27.5",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-terser": "^5.1.1",
        "rollup-plugin-typescript": "^1.0.1",
        "tslib": "^1.10.0",
        "typescript": "^3.7.2"
    },
    "repository": "github:NotWoods/big-island-buses",
    "author": "Tiger Oakes",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/NotWoods/big-island-buses/issues"
    },
    "homepage": "https://github.com/NotWoods/big-island-buses#readme",
    "scripts": {
        "prebuild": "rollup -c",
        "build": "node lib/api.js google_transit.zip src/site/_data/api.json",
        "postbuild": "eleventy",
        "lint:files": "tsc --noEmit && prettier \"*.{md,css,html}\" \"src/**/*.ts\" \"src/**/*.js\" rollup.config.js .eleventy.js",
        "lint": "npm run lint:files -- --write",
        "lint:check": "npm run lint:files -- --check"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always",
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "printWidth": 120,
                    "tabWidth": 2
                }
            }
        ]
    }
}
