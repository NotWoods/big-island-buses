{
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {
    "**/tsconfig.tsbuildinfo": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "src/*/missing-types.d.ts": false,
    "src/*/*/**/*.d.ts": true,
    "src/lib/*.d.ts": true,
    "src/service-worker/index.d.ts": true,
    "src/shared/gtfs-types.d.ts": true,
    "src/worker/promise-worker.d.ts": true,
    "src/worker/register.d.ts": true,
  },
}
