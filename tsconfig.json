{
	"compilerOptions": {
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true,

		"target": "es2017",
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable"
		],
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
