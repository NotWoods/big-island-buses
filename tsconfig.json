{
    "include": ["./src/**/*"],
    "compilerOptions": {
        /* Basic Options */
        "target": "es2018",
        "module": "esnext",
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "lib": ["dom", "esnext", "webworker", "dom.iterable"],
        "skipLibCheck": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}
