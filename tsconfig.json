{
    "include": ["./src/**/*"],
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "jsxFactory": "h",
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "importHelpers": true,
        "pretty": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}
