---
pagination:
  data: trips
  size: 1
  alias: trip_id
permalink: "/routes/{{ trips[trip_id] }}/{{ trip_id }}.html"
---
<!DOCTYPE html>
<html>
  {% set route = api.routes[trips[trip_id]] %}
  {% set trip = route.trips[trip_id] %}
  <head>
    {% include 'meta.html' %}
    <title>{{ route.route_long_name }} | Big Island Buses</title>
    <link rel="canonical" href="https://notwoods.github.io/big-island-buses/routes/{{ route.route_id }}/">
  </head>
  <body>
    {% include 'sidebar.njk' %}

    <div id="screen-cover"></div>

    <main id="main" class="open">
      {% include 'map.njk' %}

      {% include 'route.njk' %}
    </main>
  </body>
</html>
